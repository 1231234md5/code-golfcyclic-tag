#!/bin/sh -e

rm -rf dist esbuild.json

node_modules/.bin/esbuild "$@"        \
    --bundle                          \
    --entry-names=[dir]/[name]-[hash] \
    --format=esm                      \
    --inject:js/_inject.js            \
    --jsx-factory=createElement       \
    --loader:.js=jsx                  \
    --metafile=esbuild.json           \
    --minify                          \
    --outbase=.                       \
    --outdir=dist                     \
    --sourcemap                       \
    `find js -name '*.js' -not -name '_*'`
